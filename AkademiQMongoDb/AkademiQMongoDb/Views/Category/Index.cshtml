@using AkademiQMongoDb.DTOs.CategoryDtos
@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<style>
    :root {
        --foodu-red: #EB0029;
        --foodu-red-dark: #d40026;
        --foodu-red-light: rgba(235, 0, 41, 0.1);
        --foodu-dark: #072b31;
        --foodu-gray: #EBE9E6;
        --shadow-sm: 0 2px 8px rgba(235, 0, 41, 0.08);
        --shadow-md: 0 4px 16px rgba(235, 0, 41, 0.12);
        --shadow-lg: 0 8px 24px rgba(235, 0, 41, 0.15);
    }

    .page-header {
        background: white;
        border-radius: 20px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(235, 0, 41, 0.05);
        transition: all 0.3s ease;
    }

    .dark .page-header {
        background: #1e242b;
        border-color: rgba(235, 0, 41, 0.1);
    }

    .page-header:hover {
        box-shadow: var(--shadow-md);
    }

    .page-title {
        font-family: 'Oswald', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        color: var(--foodu-dark);
        margin: 0;
        letter-spacing: 1px;
        position: relative;
        display: inline-block;
    }

    .dark .page-title {
        color: white;
    }

    .page-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #EB0029, #ff6b6b);
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .page-title:hover::after {
        width: 100%;
    }

    .count-badge {
        display: inline-block;
        margin-left: 0.75rem;
        padding: 0.2rem 0.75rem;
        background: #EB0029;
        color: white;
        font-size: 14px;
        font-weight: 600;
        border-radius: 20px;
        vertical-align: middle;
    }

    .table-container {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(235, 0, 41, 0.05);
        overflow-x: auto;
        transition: all 0.3s ease;
    }

    .dark .table-container {
        background: #1e242b;
        border-color: rgba(235, 0, 41, 0.1);
    }

    .table-container:hover {
        box-shadow: var(--shadow-md);
    }

    .category-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .category-table th {
            font-family: 'Oswald', sans-serif;
            font-size: 14px;
            font-weight: 600;
            color: var(--foodu-dark);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 1rem 1.5rem;
            background: #f8fafc;
            border-bottom: 2px solid #EB0029;
            white-space: nowrap;
        }

    .dark .category-table th {
        background: #2a3038;
        color: white;
        border-bottom-color: #EB0029;
    }

    .category-table td {
        padding: 1.25rem 1.5rem;
        font-family: 'Jost', sans-serif;
        font-size: 15px;
        color: #4a5568;
        border-bottom: 1px solid rgba(235, 0, 41, 0.1);
        vertical-align: middle;
    }

    .dark .category-table td {
        color: #cbd5e0;
        border-bottom-color: rgba(235, 0, 41, 0.15);
    }

    .category-table tr:last-child td {
        border-bottom: none;
    }

    .category-table tbody tr {
        transition: all 0.3s ease;
        animation: fadeIn 0.5s ease forwards;
        animation-delay: calc(var(--row-index) * 0.05s);
        opacity: 0;
    }

        .category-table tbody tr:hover {
            background: rgba(235, 0, 41, 0.03);
            transform: translateY(-2px);
            box-shadow: var(--shadow-sm);
        }

    .dark .category-table tbody tr:hover {
        background: rgba(235, 0, 41, 0.1);
    }

    .category-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        background: rgba(235, 0, 41, 0.1);
        color: #EB0029;
        font-family: 'Oswald', sans-serif;
        font-weight: 600;
        border-radius: 10px;
        font-size: 16px;
    }

    .dark .category-number {
        background: rgba(235, 0, 41, 0.2);
        color: #ff6b6b;
    }

    .category-name {
        font-family: 'Oswald', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: var(--foodu-dark);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .dark .category-name {
        color: white;
    }

    .category-icon {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #EB0029 0%, #ff6b6b 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .category-icon .material-symbols-outlined {
            font-size: 18px;
            color: white;
        }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.6rem 1.25rem;
        font-family: 'Jost', sans-serif;
        font-size: 13px;
        font-weight: 500;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        white-space: nowrap;
        min-width: 90px;
    }

        .btn-action i {
            font-size: 16px;
        }

        .btn-action .material-symbols-outlined {
            font-size: 18px;
        }

    .btn-delete {
        background: rgba(235, 0, 41, 0.1);
        color: #EB0029;
    }

        .btn-delete:hover {
            background: #EB0029;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(235, 0, 41, 0.3);
        }

    .btn-update {
        background: rgba(7, 43, 49, 0.1);
        color: var(--foodu-dark);
    }

    .dark .btn-update {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .btn-update:hover {
        background: var(--foodu-dark);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(7, 43, 49, 0.3);
    }

    .btn-create {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        background: transparent;
        color: var(--foodu-dark);
        font-family: 'Oswald', sans-serif;
        font-size: 16px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 2px solid #EB0029;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        z-index: 1;
        margin-top: 1.5rem;
    }

    .dark .btn-create {
        color: white;
        border-color: #EB0029;
    }

    .btn-create::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, #EB0029, #ff4d4d);
        transition: left 0.3s ease;
        z-index: -1;
    }

    .btn-create:hover {
        color: white;
        border-color: transparent;
    }

        .btn-create:hover::before {
            left: 0;
        }

    .btn-create .material-symbols-outlined {
        font-size: 22px;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        font-size: 64px;
        color: rgba(235, 0, 41, 0.2);
        margin-bottom: 1rem;
    }

        .empty-state-icon .material-symbols-outlined {
            font-size: 64px;
        }

    .empty-state h3 {
        font-family: 'Oswald', sans-serif;
        font-size: 24px;
        color: var(--foodu-dark);
        margin-bottom: 0.5rem;
    }

    .dark .empty-state h3 {
        color: white;
    }

    .empty-state p {
        color: #64748b;
        margin-bottom: 2rem;
    }

    .dark .empty-state p {
        color: #94a3b8;
    }

    /* Animasyonlar */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header {
            padding: 1.25rem;
        }

        .page-title {
            font-size: 1.75rem;
        }

        .category-table th,
        .category-table td {
            padding: 1rem;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-action {
            width: 100%;
            min-width: auto;
        }

        .btn-create {
            width: 100%;
            justify-content: center;
            padding: 0.875rem 1.5rem;
        }
    }

    @@media (max-width: 480px) {
        .page-header {
            padding: 1rem;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .count-badge {
            font-size: 12px;
            padding: 0.15rem 0.5rem;
        }

        .category-number {
            width: 28px;
            height: 28px;
            font-size: 14px;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">
        Kategoriler
        <span class="count-badge">@Model.Count</span>
    </h1>
</div>

<div class="table-container">
    @if (Model.Any())
    {
        <table class="category-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr style="--row-index: @count;">
                        <td>
                            <span class="category-number">@count</span>
                        </td>
                        <td>
                            <div class="category-name">
                                <div class="category-icon">
                                    <span class="material-symbols-outlined">category</span>
                                </div>
                                @item.Name
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="/Category/DeleteCategory/@item.Id"
                                   class="btn-action btn-delete"
                                   onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz? Bu işlem geri alınamaz.')">
                                    <span class="material-symbols-outlined">delete</span>
                                    Sil
                                </a>
                                <a href="/Category/UpdateCategory/@item.Id" class="btn-action btn-update">
                                    <span class="material-symbols-outlined">edit</span>
                                    Güncelle
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <span class="material-symbols-outlined">category</span>
            </div>
            <h3>Henüz Kategori Yok</h3>
            <p>İlk kategorinizi oluşturarak başlayın.</p>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="text-end">
        <a href="/Category/CreateCategory/" class="btn-create">
            <span class="material-symbols-outlined">add</span>
            Yeni Kategori Oluştur
        </a>
    </div>
}
else
{
    <div class="text-center">
        <a href="/Category/CreateCategory/" class="btn-create">
            <span class="material-symbols-outlined">add</span>
            Yeni Kategori Oluştur
        </a>
    </div>
}

<script>
    // Silme işlemi için gelişmiş onay
    document.querySelectorAll('.btn-delete').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            var href = this.href;

            if (confirm('Bu kategoriyi silmek istediğinize emin misiniz? Bu işlem geri alınamaz.')) {
                window.location.href = href;
            }
        });
    });

    // Tablo satırlarına hover efekti
    document.querySelectorAll('.category-table tbody tr').forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.backgroundColor = 'rgba(235, 0, 41, 0.03)';
        });

        row.addEventListener('mouseleave', function() {
            this.style.backgroundColor = '';
        });
    });

    // Dark mode kontrolü
    if (document.documentElement.classList.contains('dark')) {
        // Dark mode spesifik ayarlar
    }
</script>