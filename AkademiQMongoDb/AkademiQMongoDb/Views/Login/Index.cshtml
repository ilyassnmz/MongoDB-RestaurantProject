@using AkademiQMongoDb.DTOs.AdminDtos
@model LoginAdminDto
@{
    Layout = null;

}
<!DOCTYPE html>

<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Foodu | Admin Giriş Sayfası</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,200&display=swap" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Jost', sans-serif;
            background: #f9fafa;
            min-height: 100vh;
        }

        .foodu-container {
            max-width: 520px;
            width: 100%;
            margin: 0 auto;
            background: white;
            border-radius: 2rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 3rem;
            position: relative;
            overflow: hidden;
        }

            .foodu-container::before {
                content: '';
                position: absolute;
                top: -50px;
                right: -50px;
                width: 200px;
                height: 200px;
                background: rgba(235, 0, 41, 0.05);
                border-radius: 50%;
                z-index: 0;
            }

            .foodu-container::after {
                content: '';
                position: absolute;
                bottom: -50px;
                left: -50px;
                width: 250px;
                height: 250px;
                background: rgba(235, 0, 41, 0.03);
                border-radius: 50%;
                z-index: 0;
            }

        .foodu-header {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
            z-index: 1;
        }

        .foodu-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

            .foodu-logo svg {
                width: 40px;
                height: 40px;
                color: #EB0029;
            }

            .foodu-logo h2 {
                font-family: 'Oswald', sans-serif;
                font-size: 28px;
                font-weight: 700;
                color: #072b31;
                letter-spacing: 1px;
            }

        .foodu-title {
            font-family: 'Oswald', sans-serif;
            font-size: 32px;
            font-weight: 600;
            color: #072b31;
            margin-bottom: 0.75rem;
            line-height: 1.2;
        }

        .foodu-subtitle {
            color: #EB0029;
            font-size: 16px;
            font-weight: 400;
        }

        .foodu-form {
            position: relative;
            z-index: 1;
        }

        .foodu-form-group {
            margin-bottom: 1.25rem;
        }

        .foodu-label {
            display: block;
            font-family: 'Oswald', sans-serif;
            font-size: 14px;
            font-weight: 600;
            color: #072b31;
            margin-bottom: 0.5rem;
            padding-left: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .foodu-input-wrapper {
            position: relative;
        }

        .foodu-input {
            width: 100%;
            height: 56px;
            padding: 0 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-family: 'Jost', sans-serif;
            font-size: 16px;
            color: #072b31;
            background: white;
            transition: all 0.3s ease;
            outline: none;
        }

            .foodu-input:focus {
                border-color: #EB0029;
                box-shadow: 0 0 0 4px rgba(235, 0, 41, 0.1);
            }

            .foodu-input::placeholder {
                color: #9ca3af;
            }

        .foodu-password-wrapper {
            position: relative;
        }

        .foodu-password-input {
            width: 100%;
            height: 56px;
            padding: 0 3rem 0 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-family: 'Jost', sans-serif;
            font-size: 16px;
            color: #072b31;
            background: white;
            transition: all 0.3s ease;
            outline: none;
        }

            .foodu-password-input:focus {
                border-color: #EB0029;
                box-shadow: 0 0 0 4px rgba(235, 0, 41, 0.1);
            }

        .foodu-password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            cursor: pointer;
            transition: color 0.3s ease;
            background: none;
            border: none;
        }

            .foodu-password-toggle:hover {
                color: #EB0029;
            }

        .foodu-strength-bar {
            display: flex;
            gap: 0.375rem;
            height: 6px;
            width: 100%;
            margin: 0.5rem 0 0.25rem;
        }

        .foodu-strength-item {
            flex: 1;
            border-radius: 9999px;
            height: 100%;
            background-color: #e5e7eb;
            transition: all 0.3s ease;
        }

            .foodu-strength-item.active {
                background-color: #EB0029;
            }

        .foodu-strength-text {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 0.25rem;
            font-size: 12px;
            color: #6b7280;
        }

        .foodu-strength-level {
            color: #EB0029;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .foodu-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin: 1.5rem 0;
        }

            .foodu-checkbox input {
                width: 18px;
                height: 18px;
                margin-top: 0.15rem;
                accent-color: #EB0029;
            }

            .foodu-checkbox label {
                font-size: 14px;
                color: #4b5563;
                line-height: 1.5;
            }

            .foodu-checkbox a {
                color: #EB0029;
                font-weight: 600;
                text-decoration: none;
            }

                .foodu-checkbox a:hover {
                    text-decoration: underline;
                }

        .foodu-btn {
            width: 100%;
            height: 64px;
            background: #EB0029;
            color: white;
            border: none;
            border-radius: 12px;
            font-family: 'Oswald', sans-serif;
            font-size: 18px;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 20px 25px -5px rgba(235, 0, 41, 0.3);
        }

            .foodu-btn:hover {
                background: #d40026;
                transform: translateY(-2px);
                box-shadow: 0 25px 30px -5px rgba(235, 0, 41, 0.4);
            }

            .foodu-btn:active {
                transform: translateY(0);
            }

        .foodu-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 14px;
            color: #EB0029;
        }

            .foodu-footer a {
                color: #EB0029;
                font-weight: 700;
                text-decoration: none;
                margin-left: 0.25rem;
            }

                .foodu-footer a:hover {
                    text-decoration: underline;
                }

        .foodu-copyright {
            text-align: center;
            margin-top: 2rem;
            font-size: 12px;
            color: rgba(235, 0, 41, 0.4);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .foodu-nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem 5rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .foodu-nav-links {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .foodu-nav-link {
            color: #072b31;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .foodu-nav-link:hover {
                color: #EB0029;
            }

        .foodu-nav-btn {
            background: #EB0029;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            box-shadow: 0 10px 15px -3px rgba(235, 0, 41, 0.3);
            transition: all 0.3s ease;
        }

            .foodu-nav-btn:hover {
                background: #d40026;
                transform: translateY(-2px);
                color: white;
            }

        .foodu-bg-mesh {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-color: #f9fafa;
            background-image: radial-gradient(at 0% 0%, rgba(235, 0, 41, 0.08) 0px, transparent 50%), radial-gradient(at 100% 0%, rgba(235, 0, 41, 0.05) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(235, 0, 41, 0.03) 0px, transparent 50%), radial-gradient(at 0% 100%, rgba(235, 0, 41, 0.06) 0px, transparent 50%);
        }

        .foodu-row {
            display: flex;
            gap: 1rem;
        }

        .foodu-col {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="foodu-bg-mesh"></div>

    <!-- Top Navigation -->
    <div class="foodu-nav">
        <div style="display: flex; align-items: center; gap: 0.75rem;">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="#EB0029" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" />
            </svg>
            <h2 style="font-family: 'Oswald', sans-serif; font-size: 24px; font-weight: 700; color: #072b31;">Foodu</h2>
        </div>
        <div class="foodu-nav-links">
            <a href="/" class="foodu-nav-link">Ana Sayfa</a>
            <a href="/Menu" class="foodu-nav-link">Menü</a>
            <a href="/Contact" class="foodu-nav-link">İletişim</a>
            <a href="/Login/Index" class="foodu-nav-btn">Giriş Yap</a>
        </div>
    </div>

    <!-- Main Content -->
    <div style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 160px); padding: 1rem;">
        <div class="foodu-container">
            <div class="foodu-header">
                <div class="foodu-logo">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="#EB0029">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" />
                    </svg>
                    <h2>Foodu</h2>
                </div>
                <h1 class="foodu-title">Admin Giriş Sayfası</h1>
                <p class="foodu-subtitle">Foodu ailesine katılın, lezzet dolu dünyamıza adım atın.</p>
            </div>

            <form method="post" class="foodu-form" asp-action="Signup" asp-controller="Register">
                

                <!-- Username -->
                <div class="foodu-form-group">
                    <label class="foodu-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="foodu-input" placeholder="kullanici_adi" type="text" required />
                </div>
                <!-- Password -->
                <div class="foodu-form-group">
                    <div class="foodu-password-wrapper">
                        <label class="foodu-label">Şifre</label>
                        <input asp-for="Password" class="foodu-password-input" placeholder="••••••••" type="password" id="password" required />
                        <button type="button" class="foodu-password-toggle" onclick="togglePassword()">
                            <span class="material-symbols-outlined" id="password-icon">visibility</span>
                        </button>
                    </div>

                <!-- Terms -->
                <div class="foodu-checkbox">
                    <input type="checkbox" id="terms" required />
                    <label for="terms">
                        <a href="/Terms">Kullanım koşulları</a> ve <a href="/Privacy">gizlilik politikasını</a> okudum, kabul ediyorum.
                    </label>
                </div>

                <span style="color:red">@Html.ValidationSummary()</span>

                <!-- Submit Button -->
                <button type="submit" class="foodu-btn">
                    <span>Giriş Yap</span>
                    <span class="material-symbols-outlined">arrow_forward</span>
                </button>

                <!-- Footer -->
                <div class="foodu-footer">
                    Henüz bir hesabınız yok mu?
                    <a href="/Register/Signup">Kayıt Ol</a>
                </div>
            </form>
        </div>
    </div>

    
    <script>
        function togglePassword() {
            var password = document.getElementById('password');
            var icon = document.getElementById('password-icon');

            if (password.type === 'password') {
                password.type = 'text';
                icon.textContent = 'visibility_off';
            } else {
                password.type = 'password';
                icon.textContent = 'visibility';
            }
        }

        // Şifre gücü göstergesi
        document.getElementById('password').addEventListener('input', function(e) {
            var password = e.target.value;
            var strength = 0;

            // Uzunluk kontrolü
            if (password.length >= 6) strength = 1;
            if (password.length >= 8) strength = 2;

            // Büyük harf kontrolü
            if (/[A-Z]/.test(password) && strength >= 2) strength = 3;

            // Rakam kontrolü
            if (/[0-9]/.test(password) && strength >= 3) strength = 4;

            // Özel karakter kontrolü
            if (/[^A-Za-z0-9]/.test(password) && strength >= 4) strength = 5;

            // Bar'ları güncelle
            var bars = ['strength-1', 'strength-2', 'strength-3', 'strength-4'];
            var strengthText = ['Çok Zayıf', 'Zayıf', 'Orta', 'İyi', 'Güçlü', 'Çok Güçlü'];

            for (var i = 0; i < 4; i++) {
                var bar = document.getElementById(bars[i]);
                if (i < strength) {
                    bar.classList.add('active');
                } else {
                    bar.classList.remove('active');
                }
            }

            document.getElementById('strength-text').textContent = strengthText[strength];
        });
    </script>
</body>
</html>