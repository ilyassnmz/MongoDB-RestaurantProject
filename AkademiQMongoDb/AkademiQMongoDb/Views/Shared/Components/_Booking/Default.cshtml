<div class="reservation-style-one-area default-padding bg-gray">
    <div class="container">
        <div class="reservation-style-one-items shadow">
            <div class="row">
                <div class="col-lg-6 reservation-thumb">
                    <img src="~/foodu v1.7/source/assets/img/reservation.jpg" alt="Resim Bulunamadı" />
                    <div class="icon">
                        <img src="/Foodu v1.7/source/assets/img/logo.png" alt="İkon">
                    </div>
                </div>
                <div class="col-lg-6 bg-dark reservation-form">
                    <div class="reservation-info">
                        <h4 class="sub-heading text-light">Rezervasyon</h4>
                        <h2 class="title text-light">Hemen Yer Ayırtın</h2>
                        <p class="text-light">
                            Özel günleriniz, iş yemekleriniz veya keyifli bir akşam yemeği için rezervasyon yaptırın.
                        </p>
                        <form action="#" class="mt-40">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Adınız</label>
                                        <input type="text" placeholder="Adınız" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Soyadınız</label>
                                        <input type="text" placeholder="Soyadınız" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>E-posta</label>
                                        <input type="email" placeholder="E-posta adresiniz" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Telefon</label>
                                        <input type="text" placeholder="Telefon numaranız" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Tarih</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control date-picker" placeholder="Tarih seçiniz">
                                            <span class="input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Saat</label>
                                        <select class="form-control">
                                            <option>09:00 - 10:00</option>
                                            <option>10:00 - 11:00</option>
                                            <option>11:00 - 12:00</option>
                                            <option>12:00 - 13:00</option>
                                            <option>13:00 - 14:00</option>
                                            <option>14:00 - 15:00</option>
                                            <option>15:00 - 16:00</option>
                                            <option>16:00 - 17:00</option>
                                            <option>17:00 - 18:00</option>
                                            <option>18:00 - 19:00</option>
                                            <option>19:00 - 20:00</option>
                                            <option>20:00 - 21:00</option>
                                            <option>21:00 - 22:00</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Kişi Sayısı</label>
                                        <select class="form-control">
                                            <option>1 Kişi</option>
                                            <option>2 Kişi</option>
                                            <option>3 Kişi</option>
                                            <option>4 Kişi</option>
                                            <option>5 Kişi</option>
                                            <option>6 Kişi</option>
                                            <option>7+ Kişi</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Özel İstekler</label>
                                        <textarea class="form-control" placeholder="Vegan menü, alerji vb. özel istekleriniz..."></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-theme btn-md animation">
                                        Rezervasyon Yap
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>