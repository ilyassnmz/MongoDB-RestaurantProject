@model AkademiQMongoDb.Areas.Admin.ViewModels.DiscountEmailViewModel
@{
    ViewData["Title"] = "İndirim Maili Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
            <h1 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6">
                İndirim Maili Gönder
            </h1>

            @if (TempData["Success"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="SendDiscountEmail" method="post" class="space-y-6">
                <div>
                    <label asp-for="DiscountCode" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        İndirim Kodu
                    </label>
                    <input asp-for="DiscountCode" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary dark:bg-gray-700 dark:text-white" placeholder="FOODU20" />
                    <span asp-validation-for="DiscountCode" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="DiscountPercentage" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        İndirim Yüzdesi
                    </label>
                    <input asp-for="DiscountPercentage" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary dark:bg-gray-700 dark:text-white" placeholder="20" />
                    <span asp-validation-for="DiscountPercentage" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="SendToActiveOnly" class="w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary" />
                    <label asp-for="SendToActiveOnly" class="ml-2 text-sm text-gray-700 dark:text-gray-300">
                        Sadece aktif abonelere gönder
                    </label>
                </div>

                <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
                    <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Önizleme:</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                        <span class="font-bold text-primary">@(Model?.DiscountPercentage ?? 20)% İndirim</span> kodu:
                        <span class="font-mono bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded">@(Model?.DiscountCode ?? "FOODU20")</span>
                    </p>
                </div>

                <div class="flex gap-4">
                    <button type="submit" class="flex-1 bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:bg-primary-dark transition-colors">
                        İndirim Maili Gönder
                    </button>
                    <a href="/Admin/Product/Index" class="flex-1 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white font-semibold py-3 px-6 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors text-center">
                        İptal
                    </a>
                </div>
            </form>
        </div>

        <!-- Abone İstatistikleri -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                Abone İstatistikleri
            </h2>
            <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <span class="block text-2xl font-bold text-primary">@ViewBag.TotalSubscribers</span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Toplam Abone</span>
                </div>
                <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <span class="block text-2xl font-bold text-green-600">@ViewBag.ActiveSubscribers</span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Aktif Abone</span>
                </div>
            </div>
        </div>
    </div>
</div>